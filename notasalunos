#include <stdio.h>

int main() {
    float notas[6];
    float *ptr = notas;
    
    printf("Digite 6 notas:\n");
    for(int i = 0; i < 6; i++) {
        scanf("%f", ptr + i);
    }
    
    // Inverter usando ponteiros
    float temp;
    float *inicio = ptr;
    float *fim = ptr + 5;
    
    while(inicio < fim) {
        temp = *inicio;
        *inicio = *fim;
        *fim = temp;
        inicio++;
        fim--;
    }
    
    printf("\nNotas invertidas:\n");
    for(int i = 0; i < 6; i++) {
        printf("%.1f ", *(ptr + i));
    }
    
    return 0;
}